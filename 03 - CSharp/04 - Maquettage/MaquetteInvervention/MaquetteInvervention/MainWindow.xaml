                <Label Content="Nature de la défectuosité : " VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Grid.Row="3" Grid.Column="2"/>
                <TextBox Grid.Column="3" HorizontalAlignment="Left" Height="23"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="255" IsEnabled="false" Grid.Row="3" Margin="10,10,0,0"/>


